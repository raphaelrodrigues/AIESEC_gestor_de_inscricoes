                    </div>
                  <% end %>

                  <div class="field">
                    <%= f.label :titulo %><br />
                    <%= f.text_field :titulo %>
                  </div>
                  <div class="field">
                    <%= f.label :descricao %><br />
                    <%= f.text_area :descricao,:value=>"descricao",:rows => 5, :cols => 100 ,:class=>"span5"%>

                  </div>

