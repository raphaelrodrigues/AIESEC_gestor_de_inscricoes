                  <div class="field">
                    <%= f.label :comite_id %><br />
                    <%= f.number_field :comite_id,value:current_comite.id %>
                  </div>

                  <div class="field">
                    <%= f.hidden_field :activa, :checked=>true %>
                  </div>

                  
                <button class="btn btn-primary"><i class="icon-save"></i>Guardar</button>

                
