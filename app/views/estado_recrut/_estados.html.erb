<div class="container-fluid">
      <div class="well">

          <h1>Estados</h1>

          <table class="table table-striped">
            <tr>
              <th></th>
              <th>Nome</th>
              <th></th>
              <th></th>
            </tr>

          <% estados.each do |estado| %>
            <tr>
              <td><%= link_to "VER", "#myModalEstadoPrevis", "data-toggle" => "modal" %></td>
              <td><%= estado.nome %></td>
              <td><%= link_to 'Edit', edit_estado_recrut_path(estado) %></td>
