           <li id="telemovel" value="candidatos[]"><a href="#" >Obter Telemovel</a></li>
           <li><a id="email_nao_contactados">Obter Emails de n√£o contactados</a></li>
          <!-- dropdown menu links -->
        </ul>
    </div>

