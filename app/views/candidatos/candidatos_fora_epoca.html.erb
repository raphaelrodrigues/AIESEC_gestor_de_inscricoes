
<div class="header">
	<h1 class="page-title">Candidatos inscritos fora de época</h1>
</div>

<ul class="breadcrumb">
    <li><a href="index.html">Home</a> <span class="divider">/</span></li>
    <li class="active">Candidatos</li>
</ul>

<div class="container-fluid">
    <div class="row-fluid">
		<% if @candidatos.nil? %>
			<h1>Não existem Candidatos</h1>
		<% else %>

			<% path = getPathSearch %>
			
			<%= form_tag path , :method => 'get'  ,:class => 'form-inline', :id=>'candidatos_search' do  %>
                       
                    <%= text_field_tag :search, params[:search], :class =>"span3 search-input",:placeholder => "Pesquisa...",:autocomplete=>"off" %>

                    <label class="naLinha"></label>
                    <%= select_tag(:field, options_for_select([['Nome', 1], ['Data', 2], ["Estado",3]]) ) %>
                      
             <% end %>
			<div id="candidatos_lista">
			    <%= render :partial => 'candidatos_fora' %>
			</div>
		<% end %>
	</div>
</div>

