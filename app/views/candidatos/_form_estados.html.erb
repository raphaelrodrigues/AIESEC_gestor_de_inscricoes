<%= fields_for :estado, @estado do |f| %>
<div class="field">
    <% f.label :nome %><br />
    <%= f.text_field :nome,:placeholder =>"Nome estado" %>
  </div>

  <div class="field">
    <% f.label :data %>
    <%= f.hidden_field :data,value: Time.now %>
  </div>
  <div class="field">
    <% f.label :descricao %><br />
    <%= f.text_area :descricao ,:size=>"400*39",:class=>"allowEnter",:placeholder =>"Descrição"%>
  </div>
  <div class="field">
    <% f.label :responsavel %><br />
    <%= f.text_field :responsavel ,:placeholder =>"Responsavel"%>
  </div>

<% end %>